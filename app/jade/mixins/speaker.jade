mixin speaker(name, talk, href, twitter)
  - var thumb = name.toLowerCase().replace(/[^a-zA-Z ]/g, '').replace(' ','_')
  a.speaker(href=href, data-toggle='modal')&attributes(attributes)
    img(
      src='images/speakers/#{thumb}_thumb.jpg',
      srcset='images/speakers/#{thumb}_thumb@2x.jpg 2x',
      alt=name,
      width='150',
      height='150'
    )
    .info
      h4 #{name + ' '}
        - if (talk)
          small= twitter
      p= talk
